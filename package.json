{
  "name": "uikit",
  "title": "UIkit",
  "description": "UIkit is a lightweight and modular front-end framework for developing fast and powerful web interfaces.",
  "version": "3.4.2",
  "main": "dist/js/uikit.js",
  "style": "dist/css/uikit.css",
  "sideEffects": [
    "*.css",
    "./src/js/*.js",
    "./dist/**/*.js"
  ],
  "scripts": {
    "build-scss": "node build/scss",
    "compile": "yarn compile-less && yarn compile-js",
    "compile-js": "node build/build",
    "compile-less": "yarn icons && node build/less",
    "compile-rtl": "yarn compile-less rtl",
    "icons": "node build/icons",
    "prefix": "node build/prefix",
    "scope": "node build/scope",
    "release": "node build/release",
    "watch": "npm-watch",
    "eslint": "eslint src/js",
    "eslint-fix": "eslint --fix src/js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uikit/uikit.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uikit/uikit/issues"
  },
  "homepage": "https://getuikit.com",
  "devDependencies": {
    "@rollup/plugin-alias": "^3.0.1",
    "@rollup/plugin-buble": "^0.21.1",
    "@rollup/plugin-replace": "^2.3.1",
    "archiver": "3.1.1",
    "buble": "^0.20.0",
    "buble-loader": "^0.5.0",
    "circular-dependency-plugin": "^5.2.0",
    "clean-css": "^4.2.3",
    "dateformat": "^3.0.3",
    "eslint": "6.8.0",
    "glob": "^7.1.6",
    "inquirer": "7.1.0",
    "less": "^2.7.2",
    "minimist": "^1.2.5",
    "npm-watch": "github:dasdeck/npm-watch#46a8a36c61cfd998ed53d27f62eaf79e11c395b4",
    "postcss": "7.0.27",
    "raw-loader": "^4.0.0",
    "rollup": "2.3.4",
    "rollup-plugin-html": "^0.2.1",
    "rtlcss": "^2.5.0",
    "semver": "^7.2.1",
    "shortid": "^2.2.15",
    "svgo": "^1.3.2",
    "uglify-js": "^3.8.1"
  },
  "watch": {
    "compile-js": "src/js/**/*.js",
    "compile-less": {
      "patterns": "**/*.less",
      "extensions": "less"
    }
  }
}
