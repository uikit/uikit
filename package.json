{
  "name": "uikit",
  "title": "UIkit",
  "description": "UIkit is a lightweight and modular front-end framework for developing fast and powerful web interfaces.",
  "version": "3.0.0",
  "scripts": {
    "compile-less": "mkdir css & npm run images & npm run compile-less-dists && node scripts/less",
    "compile-less-dists": "npm run compile-less-core && npm run compile-less-core-all && npm run compile-less-core-site && npm run compile-less-core-app && npm run compile-less-theme && npm run compile-less-theme-all && npm run compile-less-theme-site && npm run compile-less-theme-app",
    "compile-less-watch": "mkdir css & npm run compile-less-core-all && npm run compile-less-theme-all & node scripts/less",
    "compile-less-core": "lessc --relative-urls --rootpath=../src/less/ src/less/uikit.less > css/uikit.css",
    "compile-less-core-all": "lessc --relative-urls --rootpath=../src/less/ src/less/uikit.all.less > css/uikit.all.css",
    "compile-less-core-site": "lessc --relative-urls --rootpath=../src/less/ src/less/uikit.site.less > css/uikit.site.css",
    "compile-less-core-app": "lessc --relative-urls --rootpath=../src/less/ src/less/uikit.app.less > css/uikit.app.css",
    "compile-less-theme": "lessc --relative-urls --rootpath=../src/less/ src/less/uikit.theme.less > css/uikit.theme.css",
    "compile-less-theme-all": "lessc --relative-urls --rootpath=../src/less/ src/less/uikit.theme.all.less > css/uikit.theme.all.css",
    "compile-less-theme-site": "lessc --relative-urls --rootpath=../src/less/ src/less/uikit.theme.site.less > css/uikit.theme.site.css",
    "compile-less-theme-app": "lessc --relative-urls --rootpath=../src/less/ src/less/uikit.theme.app.less > css/uikit.theme.app.css",
    "images": "mkdir images &  node scripts/images",
    "compile-js": "node scripts/build",
    "compile": "npm run compile-less && npm run compile-js",
    "watch-less": "watch-run -i -p '**/*.less' npm run compile-less-watch",
    "watch-js": "watch-run -i -p 'src/js/**/*.js' npm run compile-js",
    "watch": "npm run watch-less && npm run watch-js",
    "test": "webpack-dev-server --inline --hot && open http://localhost:8080/tests/"
  },
  "devDependencies": {
    "babel-core": "6.9.1",
    "babel-eslint": "5.0.4",
    "babel-loader": "6.2.4",
    "babel-plugin-add-module-exports": "0.1.4",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-es2015-rollup": "1.1.1",
    "glob": "^7.0.3",
    "jquery": "^2.2.1",
    "less": "^2.7.1",
    "rollup": "^0.31.1",
    "rollup-plugin-babel": "2.5.1",
    "rollup-plugin-node-resolve": "1.7.0",
    "uglify-js": "^2.6.2",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
