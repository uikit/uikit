{
  "name": "uikit",
  "title": "UIkit",
  "description": "UIkit is a lightweight and modular front-end framework for developing fast and powerful web interfaces.",
  "version": "3.0.0-beta.18",
  "main": "dist/js/uikit.js",
  "scripts": {
    "compile": "npm run compile-less && npm run compile-js",
    "compile-js": "node build/build",
    "compile-less": "npm run icons && node build/less",
    "compile-rtl": "npm run compile-less -- rtl",
    "icons": "node build/icons",
    "prefix": "node build/prefix",
    "scope": "node build/scope",
    "release": "npm run compile && npm run compile-rtl && node build/release",
    "watch": "npm-watch",
    "test": "webpack-dev-server --inline --hot && open http://localhost:8080/tests/"
  },
  "devDependencies": {
    "archiver": "^1.3.0",
    "buble": "^0.15.1",
    "buble-loader": "^0.4.0",
    "clean-css": "^4.0.8",
    "concat": "^3.0.0",
    "glob": "^7.0.3",
    "html-loader": "^0.4.5",
    "jquery": "^3.1.1",
    "less": "^2.7.1",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "npm-watch": "^0.1.7",
    "postcss": "^5.2.15",
    "rollup": "^0.34.13",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-import-alias": "^1.0.3",
    "rollup-plugin-json": "^2.1.0",
    "rollup-plugin-node-resolve": "1.7.0",
    "rollup-plugin-replace": "^1.1.1",
    "rtlcss": "^2.1.2",
    "uglify-js": "^2.7.5",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0"
  },
  "watch": {
    "compile-js": "src/js/**/*.js",
    "compile-less": {
      "patterns": "**/*.less",
      "extensions": "less"
    }
  }
}
