[default]
bears = FilenameBear, InvalidLinkBear, coalaBear
files = **.css, **.yml, **.js, **.html, **.json, **.svg, **.md, **.scss
ignore = 
[xml]
bears = XMLBear, LineLengthBear
files = **.svg
[yaml]
bears = LineLengthBear, YAMLLintBear
files = **.yml
[json]
bears = JSONFormatBear, LineLengthBear
files = **.json
[scss]
bears = SCSSLintBear, LineLengthBear
files = **.scss
[css]
bears = CSSLintBear
files = **.css
[markdown]
bears = MarkdownBear, LineLengthBear
files = **.md
[html]
bears = LineLengthBear, BootLintBear, HTMLLintBear
files = **.html
[javascript]
bears = JSComplexityBear, JSHintBear
files = **.js
